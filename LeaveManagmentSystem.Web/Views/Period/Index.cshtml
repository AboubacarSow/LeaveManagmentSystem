@model IEnumerable<Period>

@{
    ViewData["Title"] = "Index";
}
<div class="d-flex justify-content-between">
    <h4>Periods</h4>

    <p>
        <a asp-action="Create" class="btn btn-primary"> <i class="fa-solid fa-plus me-2"></i>Create New</a>
    </p>

</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndOn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndOn)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"> <i class="fa-solid fa-pen"></i>Edit</a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa-solid fa-list"></i>   Details</a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i>   Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
