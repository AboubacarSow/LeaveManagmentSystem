@model IEnumerable<LeaveTypeReadOnlyVM>

@{
    ViewData["Title"] = "Index";
}
<div class="d-flex justify-content-between">
    <h3 class="text-center">Leave Types Items</h3>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Number Of Days
            </th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Days)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning text-light"><i class="fa-solid fa-pen"></i>    Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"> <i class="fa-solid fa-list"></i>   Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i>   Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
